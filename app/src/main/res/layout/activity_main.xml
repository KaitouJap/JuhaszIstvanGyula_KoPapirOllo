<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/cpu_heart1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

            <ImageView
                android:id="@+id/cpu_heart2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

            <ImageView
                android:id="@+id/cpu_heart3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gép"
                android:textSize="35sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Játékos"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/player_heart1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

            <ImageView
                android:id="@+id/player_heart2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

            <ImageView
                android:id="@+id/player_heart3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/heart2" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tieText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Döntetlenek száma: 0"
        android:textAlignment="center"
        android:textSize="30sp" />


    <ImageView
        android:id="@+id/cpuImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/rock" />

    <TextView
        android:id="@+id/playerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:text="A gép választása"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/playerImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/rock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="A te választásod"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/rockButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/rock"/>


        <ImageButton
            android:id="@+id/paperButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/paper"/>

        <ImageButton
            android:id="@+id/scissorsButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/scissors"/>
    </LinearLayout>

</LinearLayout>